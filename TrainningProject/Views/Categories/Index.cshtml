@model IEnumerable<TrainningProject.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <h2 class="title-data">Categories</h2>
    <div class="data">
        @Html.ActionLink("Create New", "Create", "Categories", null, new { @class = "btn btn-primary mb-2" })

        <table class="table text-center table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Action</th>
            </tr>

            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        @if (User.IsInRole("TrainningStaff"))
                        {
                            <td>

                                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-warning mr-1" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger" })
                            </td>
                        }

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">Not Found Data</td>
                </tr>
            }

        </table>
    </div>
</div>

