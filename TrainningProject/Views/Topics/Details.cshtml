@model TrainningProject.Models.Topic

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <h2>Details</h2>

    <div class="data">
        <h4>Topic</h4>
        <hr />
        <p><b>@Html.DisplayNameFor(model => model.TopicName)</b>: @Html.DisplayFor(model => model.TopicName) </p>
        <p><b>@Html.DisplayNameFor(model => model.Course.CourseName)</b>: @Html.DisplayFor(model => model.Course.CourseName) </p>
        <p><b>@Html.DisplayNameFor(model => model.Description)</b>: @Html.DisplayFor(model => model.Description) </p>
        <p>
            <b>@Html.DisplayNameFor(model => model.TrainerTopics.ElementAt(0).Trainer.TrainerName)</b>:   @Html.DisplayFor(model => model.TrainerTopics.ElementAt(0).Trainer.TrainerName)
            @Html.ActionLink("Edit Trainer", "Edit", "TrainerTopics", new { id = Model.TrainerTopics.ElementAt(0).ID }, new { @class = "btn btn-info" })
        </p>
        <hr />
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.TopicID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Cancel", "Index", "Topics", null, new { @class = "btn btn-secondary" })
        </p>
    </div>
</div>

