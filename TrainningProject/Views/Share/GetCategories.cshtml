@model IEnumerable<TrainningProject.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .link-cate {
        padding: 0.25rem 3rem;
        border: 1px solid #6c757d;
        border-radius: 0.6rem;
        text-decoration: none;
        color: #6c757d;
    }
        .link-cate:hover {
            text-decoration: none;
            background-color: #6c757d;
            color: white;
            border: none;
        }
</style>

<div class="content">

    <h2 class="title-data">Category</h2>
    <div class="data">
        <div class="row data row-cols-4">
            @if (Model.Count() > 0)
            {

                foreach (var item in Model)
                {
                    <div class="col-3">
                        @Html.ActionLink(item.Name, "GetCourse", "Share", new { id = item.CategoryID }, new { @class = "link-cate" })
                    </div>
                }
            }
            else
            {
                <div class="col-3">
                    Not found data
                </div>
            }
        </div>
    </div>
</div>



