@model TrainningProject.Models.Course

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <h2>Delete Course</h2>
    <div class="data">
        <h3>Are you sure you want to delete this?</h3>
        <div>

            <hr />
            <p><b> @Html.DisplayNameFor(model => model.CourseName): </b>@Html.DisplayFor(model => model.CourseName)</p>
            <p><b> @Html.DisplayNameFor(model => model.Category.Name): </b>@Html.DisplayFor(model => model.Category.Name)</p>

            <p><b> @Html.DisplayNameFor(model => model.Description): </b>@Html.DisplayFor(model => model.Description)</p>



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", "Courses", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>

</div>
