@model TrainningProject.Models.TrainerTopic

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">

    <h2>Delete</h2>
    <div class="data">
        <h3>Are you sure you want to delete this?</h3>
        <div>

            <hr />
            <p><b>@Html.DisplayNameFor(model => model.Topic.TopicName): </b> @Html.DisplayFor(model => model.Topic.TopicName)</p>
            <p><b>@Html.DisplayNameFor(model => model.Trainer.TrainerName): </b>  @Html.DisplayFor(model => model.Trainer.TrainerName)</p>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "GetTrainerTopics", "TrainerTopics", new { id = Model.Topic.TourseID }, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
