@model TrainningProject.Models.Trainer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <h2>Edit</h2>


    <div class="data">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <h4>Trainer</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TrainerID)

            <div class="form-row">
                <div class="form-group col">
                    @Html.LabelFor(model => model.TrainerName)

                    @Html.EditorFor(model => model.TrainerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TrainerName, "", new { @class = "text-danger" })

                </div>

            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Email)

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(model => model.dob)

                    @Html.EditorFor(model => model.dob, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dob, "", new { @class = "text-danger" })

                </div>
                <div class="form-group col-6">
                    @Html.LabelFor(model => model.Age)

                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                </div>

            </div>
            @Html.HiddenFor(model => model.UserName)

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(model => model.WokingPlace)

                    @Html.EditorFor(model => model.WokingPlace, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.WokingPlace, "", new { @class = "text-danger" })

                </div>

                <div class="form-group col-6">
                    @Html.LabelFor(model => model.Phone)

                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                </div>
            </div>




            <div class="form-row">
                <div class="form-group col">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @if (User.IsInRole("Admin") || User.IsInRole("TrainningStaff"))
                    {
                        @Html.ActionLink("Cancel", "Index", "Trainers", null, new { @class = "btn btn-secondary" })
                    }
                    else
                    {
                        @Html.ActionLink("Cancel", "GetUser", "TrainerUser", new { userName = Model.UserName }, new { @class = "btn btn-secondary" })
                    }
                </div>
            </div>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
