@model TrainningProject.Models.Trainer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content">
    <h2>Delete Trainer</h2>
    <div class="data">
        <h3>Are you sure you want to delete this?</h3>
        <div>

            <hr />
            <p><b>@Html.DisplayNameFor(model => model.TrainerID): </b>@Html.DisplayFor(model => model.TrainerID)</p>
            <p><b>@Html.DisplayNameFor(model => model.TrainerName): </b>@Html.DisplayFor(model => model.TrainerName)</p>

            <p><b>@Html.DisplayNameFor(model => model.dob): </b>@Html.DisplayFor(model => model.dob)</p>
            <p><b>@Html.DisplayNameFor(model => model.Age): </b>@Html.DisplayFor(model => model.Age)</p>
            <p><b>@Html.DisplayNameFor(model => model.UserName): </b>@Html.DisplayFor(model => model.UserName)</p>
            <p><b>@Html.DisplayNameFor(model => model.Email): </b>@Html.DisplayFor(model => model.Email)</p>
            <p><b>@Html.DisplayNameFor(model => model.WokingPlace): </b>@Html.DisplayFor(model => model.WokingPlace)</p>
            <p><b>@Html.DisplayNameFor(model => model.Phone): </b>@Html.DisplayFor(model => model.Phone)</p>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", "Trainers", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

